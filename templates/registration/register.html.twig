{% extends 'base.html.twig' %}

{% block title %}Enregister un Utilisateur{% endblock %}

{% block sidebar %} 
{% endblock %}

{% block date %}
{% endblock %}

{% block body %}
    <div class="row justify-content-center text-center connexion_enregistrement">
        {{ form_start(registrationForm) }}
        <div id="logo_connexion">M</div>
        <h1>Enregistrer</h1>
        <div class="md-form mb-4">
            {{ form_label(registrationForm.mail) }}
            <div class="input-group mb-2 mr-sm-2">
                {{ form_widget(registrationForm.mail) }}
            </div>
        </div>
        <div class="md-form mb-4">
            {{ form_label(registrationForm.plainPassword) }}
            <div class="input-group mb-2 mr-sm-2">
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="md-form mb-4">
            <div class="input-group mb-2 mr-sm-2 form-check">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms) }}
            </div>
        </div>

        <button class="button-gradiant">Enregistrer</button>
        <br><br>
         <a href="{{ path("app_login") }}">Se connecter</a>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block include %}
{% endblock %}