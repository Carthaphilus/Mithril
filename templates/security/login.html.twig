{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block sidebar %} 
{% endblock %}

{% block date %}
{% endblock %}

{% block body %}
    <div class="row justify-content-center text-center connexion_enregistrement">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div id="logo_connexion">M</div>
            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            <div class="md-form mb-4">
                <label for="inputMail">Mail</label>
                <div class="input-group mb-2 mr-sm-2">
                    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" required autofocus>
                </div>
            </div>
            <div class="md-form mb-4">
                <label for="inputPassword">Mot de passe</label>
                <div class="input-group mb-2 mr-sm-2">
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
        
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="button-gradiant" type="submit">
                Se connecter
            </button><br><br>
            <a href="{{ path("app_register") }}">S'inscrire</a>
        </form>         
    </div>
{% endblock %}

{% block include %}
{% endblock %}
