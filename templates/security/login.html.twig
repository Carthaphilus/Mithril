{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block sidebar %} 
{% endblock %}

{% block date %}
{% endblock %}

{% block body %}
    <link href="{{ asset('css/signin.css') }}" rel="stylesheet">
    <div class="container">
        <div class="area" >
            <ul class="circles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div >

        <div class="row justify-content-center text-center connexion_enregistrement">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div id="logo_connexion">M</div>
                <h1 class="h3 mb-3 font-weight-normal text_connexion">Connexion</h1>
                <div class="md-form mb-4">
                    <label for="inputMail" class="text_connexion">Mail</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" required autofocus>
                    </div>
                </div>
                <div class="md-form mb-4">
                    <label for="inputPassword" class="text_connexion">Mot de passe</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="button-gradiant" type="submit">
                    Se connecter
                </button><br><br>
                <a href="{{ path("app_register") }}" class="inscription text_connexion">S'inscrire</a>
            </form>         
        </div>
    </div>
{% endblock %}

{% block include %}
{% endblock %}
